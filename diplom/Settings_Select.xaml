<Window x:Class="diplom.Settings_Select"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom"
        mc:Ignorable="d"
        Title="Выбор настроек" Height="450" Width="800" Loaded="Window_Loaded" Icon="/логотип (1).png">
    <Grid Background="#e5e4e2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" FontSize="22" FontFamily="Calibri">Список настроек</TextBlock>
        <DataGrid Grid.Row="1" Name="Settings" FontSize="16" IsReadOnly="True" Margin="20 0 20 0"></DataGrid>
        <Button  Grid.Row="2" Style="{StaticResource RoundButton}"   Width="150"  Grid.ColumnSpan="2"  FontSize="20" FontFamily="Calibri" Name="button_selection" Click="button_selection_Click" Margin="0 10 0 10">Выбрать</Button>
    </Grid>
</Window>
